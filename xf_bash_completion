_xf() {
    local cur prev opts cmds
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    cmds=$(ls `xf xfiles`)
    opts="--help --version init edit --use-history rm ls xfiles ${cmds}"

    COMPREPLY=()

    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    return 0
}

complete -F _xf xf
